<div class="row panel">
  <div class="large-12 columns">
    <h2>Úpravy</h2>

    <%= semantic_form_for(@video, url: admin_video_path(@video), method: :patch) do |f| %>
      <%= f.input :comedy, as: :select, collection: Comedy.all %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>

<div class="row panel">
  <div class="large-12 columns">
    <h1><%= @video.title %></h1>
    <% if @video.comedy %>
      Článek: <%= link_to @video.comedy.bilingual_title, admin_comedy_path(@video.comedy) %>
    <% end %>
    |
    <%= link_to 'Smazat video', admin_video_path(@video), method: :delete, class: 'red-text' %>

    <% if @video.youtube_link %>
    <div>
      <hr />
      <%= video_iframe(@video) %>
    </div>
  <% elsif %>
    <hr />
    Neni link
  <% end %>
  </div>
</div>
