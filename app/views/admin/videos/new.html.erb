<div class="row panel">
  <div class="large-12 columns">
    <h1>Nov√© video</h1>
    <%= semantic_form_for :video, url: admin_videos_path do |f| %>
      <%= f.input :title %>
      <%= f.input :comedy, as: :select, collection: Comedy.all %>
