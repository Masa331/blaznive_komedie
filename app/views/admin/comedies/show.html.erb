<div class="row">
  <div class="span12 well">
    <h1><%= @comedy.bilingual_title %></h1>
    <%= @comedy.publish ? 'Zveřejněno' : 'Nezveřejněno' %> |
    Kategorie: <%= link_to @comedy.category.title, admin_category_path(@comedy.category) %> |
    Obrázek: <%= link_to @comedy.images.first.title, admin_image_path(@comedy.images.first) %> |
    Video: <%= link_to @comedy.videos.first.title, admin_video_path(@comedy.videos.first) %> |
    <%= link_to 'Smazat článek', admin_comedy_path(@comedy), method: :delete, class: 'red-text' %>

    <h4>Text:</h4>
    <%= raw markdown.render(@comedy.text) %>
  </div>
</div>

<div class="row">
  <div class="span12 well">
    <h2>Úpravy</h2>
    <%= simple_form_for(@comedy, url: admin_comedy_path(@comedy), method: :patch, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :publish %>
      <%= f.association :category, as: :radio_buttons %>
      <%= f.input :cz_title, input_html: { class: 'span8'} %>
      <%= f.input :en_title, input_html: { class: 'span8'} %>
      <%= f.input :text, input_html: { class: 'span8', rows: 10 } %>
      <%= f.button :submit, class: 'btn-primary' %>
    <% end %>
  </div>
</div>
