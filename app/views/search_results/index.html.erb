<h1>Výsledky výhledávání pro "<%= @searched_term %>":</h1>

<ul>
  <% @comedies_by_title.each do |comedy| %>
    <li><%= link_to comedy.bilingual_title, comedy_path(comedy) %></li>
  <% end %>
</ul>

<ul>
  <% @comedies_by_tag.each do |comedy| %>
    <li>
      <%= link_to comedy.bilingual_title, comedy_path(comedy) %>
      <% comedy.tag_list.each do |tag| %>
        <%= tag_with_link(tag) %>
      <% end %>
    </li>
  <% end %>
</ul>

<ul>
  <% @comedies_by_text.each do |comedy| %>
    <li>
      <%= link_to comedy.bilingual_title, comedy_path(comedy) %>
      <p><%= highlight(excerpt(comedy.text, @searched_term, radius: 50), @searched_term) %></p>
    </li>
  <% end %>
</ul>
