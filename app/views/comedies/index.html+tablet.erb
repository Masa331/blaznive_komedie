<div>
  <% @comedies.each do |comedy| %>
    <article>
      <h1><strong><%= link_to comedy.bilingual_title, comedy_path(comedy) %></strong></h1>

      <small>
        <%= l(comedy.created_at) %>
        |
        <% comedy.tag_list.each do |tag| %>
          <%= tag_with_link(tag) %>
        <% end %>
      </small>

      <div class="entry-body">
        <%= image_tag comedy.image.image_url, class: 'img-fluid' %>

        <p class="comedy-description">
          <%= truncate(comedy.text, length: 200) %>
          <strong>
            <%= link_to 'Číst dále', comedy_path(comedy) %>
          </strong>
        </p>
      </div>
    </article>
  <% end %>

  <%= paginate @comedies %>
</div>
