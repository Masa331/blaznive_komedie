<div>
  <h2>
    <%= link_to comedy.bilingual_title, comedy_path(comedy) %>
  </h2>

  <small>
    <%= l(comedy.created_at) %> zařadil administrator
  </small>

  <div class="entry">
    <% if comedy.image.present? && comedy.image.image_url.present? %>
      <%= link_to comedy_path(comedy) do %>
        <%= image_tag comedy.image.image_url %>
      <% end %>
    <% end %>

    <p><%= truncate(comedy.text, length: 200) %></p>
    <%= link_to 'Číst dále...', comedy_path(comedy) %>
  </div>
</div>
